{
  "name": "@techaro/alexandria",
  "version": "0.1.0",
  "description": "Techaro's log aggregation server",
  "main": "index.js",
  "scripts": {
    "dev": "npm run generate && go run ./cmd/web",
    "format": "npx prettier -w . && go tool goimports -w .",
